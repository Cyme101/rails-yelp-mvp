<h1> <%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h3>Review for <%= @restaurant.name %></h3>
<p><% @restaurant.reviews.each do |review| %></p>
<p><%= review.content %></p>
<% end %>

<p><%= link_to "Write a review for this restaurant", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Back to List", restaurants_path %></p>
